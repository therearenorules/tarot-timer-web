{
  "cli": {
    "version": ">= 13.2.5",
    "requireCommit": false
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "ios": {
        "resourceClass": "m1-medium"
      },
      "android": {
        "buildType": "apk"
      }
    },
    "preview": {
      "distribution": "internal",
      "ios": {
        "resourceClass": "m1-medium",
        "simulator": true
      },
      "android": {
        "buildType": "apk"
      }
    },
    "production": {
      "channel": "production",
      "env": {
        "NODE_ENV": "production",
        "EXPO_PUBLIC_APP_ENV": "production"
      },
      "ios": {
        "resourceClass": "m1-medium",
        "autoIncrement": true,
        "bundleIdentifier": "com.tarottimer.app",
        "buildConfiguration": "Release"
      },
      "android": {
        "autoIncrement": true,
        "buildType": "app-bundle",
        "applicationId": "com.tarottimer.app"
      }
    },
    "production-ios": {
      "extends": "production",
      "platform": "ios",
      "ios": {
        "resourceClass": "m1-medium",
        "autoIncrement": true,
        "bundleIdentifier": "com.tarottimer.app",
        "buildConfiguration": "Release",
        "simulator": false
      }
    },
    "production-android": {
      "extends": "production",
      "platform": "android",
      "android": {
        "autoIncrement": true,
        "buildType": "app-bundle",
        "applicationId": "com.tarottimer.app"
      }
    }
  },
  "submit": {
    "production": {
      "ios": {
        "appleId": "YOUR_APPLE_ID@email.com",
        "ascAppId": "YOUR_ASC_APP_ID",
        "appleTeamId": "YOUR_APPLE_TEAM_ID",
        "sku": "tarot-timer-ios",
        "language": "ko-KR",
        "companyName": "Tarot Timer Development Team",
        "appName": "타로 타이머"
      },
      "android": {
        "serviceAccountKeyPath": "path/to/google-play-service-account.json",
        "track": "production",
        "releaseStatus": "completed",
        "changesNotSentForReview": false
      }
    }
  }
}