# Tarot Timer - Environment Variables Template
# Copy this file to .env and fill in your actual values

# Application Configuration
NODE_ENV=development
APP_VERSION=1.0.0
APP_NAME="타로 타이머"

# Expo Configuration
EXPO_PUBLIC_API_URL=http://localhost:3000/api
EXPO_PUBLIC_WS_URL=ws://localhost:3000
EXPO_PUBLIC_APP_ENV=development

# Database Configuration (Supabase)
EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
DATABASE_URL=postgresql://postgres:password@localhost:5432/tarot_timer

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# API Keys & External Services
# Google Analytics (Optional)
GA_MEASUREMENT_ID=G-XXXXXXXXXX
GA_API_SECRET=your-ga4-api-secret

# Vercel Analytics (Optional)
VERCEL_ANALYTICS_ID=your-vercel-analytics-id

# Push Notifications (Optional)
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_EMAIL=mailto:your-email@domain.com

# Storage Configuration
# File Upload Limits
MAX_FILE_SIZE=10MB
UPLOAD_PATH=./uploads

# Cache Configuration
CACHE_TTL=300
CACHE_MAX_SIZE=100MB

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_TRACKING=true
ENABLE_ANALYTICS=true

# Development Configuration
ENABLE_REQUEST_LOGGING=true
LOG_LEVEL=debug
DEBUG_MODE=true

# Production Overrides (set these for production)
# NODE_ENV=production
# EXPO_PUBLIC_API_URL=https://your-backend-domain.com/api
# EXPO_PUBLIC_WS_URL=wss://your-backend-domain.com
# EXPO_PUBLIC_APP_ENV=production
# LOG_LEVEL=info
# DEBUG_MODE=false
# ENABLE_REQUEST_LOGGING=false

# Deployment Configuration
# For GitHub Actions / CI/CD
VERCEL_TOKEN=your-vercel-token
VERCEL_ORG_ID=your-vercel-org-id
VERCEL_PROJECT_ID=your-vercel-project-id

# Railway/Heroku Deployment
RAILWAY_TOKEN=your-railway-token
# or
HEROKU_API_KEY=your-heroku-api-key
HEROKU_APP_NAME=your-app-name

# Security Headers
CORS_ORIGIN=http://localhost:8082,https://your-domain.com
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your-session-secret-key
SESSION_MAX_AGE=86400000

# Feature Flags
ENABLE_PWA=true
ENABLE_OFFLINE_MODE=true
ENABLE_REAL_TIME_SYNC=true
ENABLE_BACKGROUND_SYNC=true
ENABLE_MULTILINGUAL=true

# Monitoring & Observability
# Sentry (Optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development

# LogRocket (Optional)
LOGROCKET_APP_ID=your-logrocket-app-id

# Testing Configuration
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/tarot_timer_test
TEST_REDIS_URL=redis://localhost:6379/1

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=24h
BACKUP_RETENTION=7d

# ✅ 앱스토어 인앱결제 설정 (Supabase Edge Function 전용)
# ⚠️ CRITICAL SECURITY: 아래 환경변수는 절대 EXPO_PUBLIC_ 접두사 사용 금지!
# ⚠️ 클라이언트 코드에 노출되면 보안 위험 발생
# ⚠️ 반드시 Supabase Edge Function 환경변수로만 설정할 것

# Supabase Edge Function 환경변수 설정 방법:
# 1. Supabase Dashboard → Edge Functions → 환경변수
# 2. 또는 Supabase CLI: supabase secrets set APPLE_SHARED_SECRET=your-apple-shared-secret

# APPLE_SHARED_SECRET (App Store Connect에서 생성)
# - 이 값은 Supabase Edge Function에서만 사용됨
# - 절대 클라이언트 앱에 포함되지 않음
# - App Store Connect → 앱 정보 → App별 공유 암호에서 생성

# Supabase 서비스 키 (Edge Function에서 RLS 우회용)
# SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key