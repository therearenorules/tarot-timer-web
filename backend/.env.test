# Test Environment Variables
NODE_ENV=test

# Test Database (use a separate test database)
DATABASE_URL="postgresql://username:password@localhost:5432/tarot_timer_test"

# JWT Configuration (use different secrets for test)
JWT_SECRET="test-jwt-secret-key-not-for-production"
JWT_EXPIRES_IN="1h"

# CORS Configuration
CORS_ORIGIN="http://localhost:8083"

# Rate Limiting (more lenient for tests)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# API Configuration
PORT=3001
API_BASE_URL="http://localhost:3001"

# Disable external services in tests
ENABLE_ANALYTICS=false
ENABLE_REQUEST_LOGGING=false